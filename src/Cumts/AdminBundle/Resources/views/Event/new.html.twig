{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}Events{% endblock %}

{% block content %}

<h1>Event creation</h1>

<h3>Create new {{ form.vars.data.eventType }}</h3>

<form action="{{ path('admin_events_create', {type: form.vars.data.eventType}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_events') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}
