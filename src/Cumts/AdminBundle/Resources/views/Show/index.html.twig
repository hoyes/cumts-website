{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}Shows{% endblock %}

{% block content %}

<h1>Show list</h1>


<ul>
    <li>
        <a href="{{ path('admin_shows_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{{ knp_pagination_render(entities) }}

<table class="records_list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Venue</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Start_at</th>
            <th>End_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_shows_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
            <td>{{ entity.author }}</td>
            <td>{{ entity.venue }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.startat %}{{ entity.startat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.endat %}{{ entity.endat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_shows_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_shows_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{{ knp_pagination_render(entities) }}

{% endblock %}
