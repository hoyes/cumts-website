{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}News{% endblock %}

{% block content %}

<h1>News creation</h1>

<form action="{{ path('admin_news_create') }}" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
    <p>
        <button type="submit">Create</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_news') }}">
            Back to the list
        </a>
    </li>
</ul>

{% endblock %}
