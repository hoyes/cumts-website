{% extends 'CumtsMainBundle::layout.html.twig' %}

{% block pagename %}News{% endblock %}

{% block content %}

<h1>News</h1>

{% for entity in entities %}
<div class="news-item">
    <h2><a href="{{ path('CumtsMainBundle_news_show', { 'slug': entity.slug }) }}">{{ entity.headline }}</a></h2>
    <td>{% if entity.publishedat %}{{ entity.publishedat|date('Y-m-d H:i:s') }}{% endif %}</td>


    {{ entity.summary | raw }}



    <p>
        <a href="{{ path('CumtsMainBundle_news_show', { 'slug': entity.slug }) }}">Read More</a>
    </p>
</div>
{% endfor %}

{% endblock %}
