{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}Events{% endblock %}

{% block content %}

<h1>Event</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Start_at</th>
            <td>{{ entity.startat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>End_at</th>
            <td>{{ entity.endat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Summary</th>
            <td>{{ entity.summary }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ entity.body }}</td>
        </tr>
        <tr>
            <th>Event_type</th>
            <td>{{ entity.eventtype }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_events') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_events_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_events_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
