{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}Members{% endblock %}

{% block content %}

<h1>Member list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Membership Type</th>
            <th>Auth Id</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Joined</th>
            <th>Leaves</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_members_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.getMembershipTypeString() }}</td>
            <td>{{ entity.authid }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.joinedat %}{{ entity.joinedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.leavesat %}{{ entity.leavesat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_members_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_members_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_members_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
