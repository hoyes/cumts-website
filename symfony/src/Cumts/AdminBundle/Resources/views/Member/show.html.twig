{% extends 'CumtsAdminBundle::layout.html.twig' %}

{% block pagename %}Members{% endblock %}

{% block content %}

<h1>Member</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>First_name</th>
            <td>{{ entity.firstname }}</td>
        </tr>
        <tr>
            <th>Last_name</th>
            <td>{{ entity.lastname }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Membership_type</th>
            <td>{{ entity.membershiptype }}</td>
        </tr>
        <tr>
            <th>Auth_id</th>
            <td>{{ entity.authid }}</td>
        </tr>
        <tr>
            <th>Created_at</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updated_at</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Joined_at</th>
            <td>{{ entity.joinedat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Leaves_at</th>
            <td>{{ entity.leavesat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_members') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_members_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_members_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}
